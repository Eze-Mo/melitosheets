{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "typeRoots" : ["./node_modules/@types", "./typings"],
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "build",
      "experimentalDecorators": true
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts"
  ],
  "include": [
      "src/**/*.ts"
  ]
}